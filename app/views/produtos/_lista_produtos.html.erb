<div class="container">
  <div class="row">
    <% produtos.each do |produto| %>
      <div class="col-md-4 text-center col-sm-4 col-xs-4 cor-padrao">
        <div class="thumbnail product-box">
          <img src="<%= produto.link_imagem %>" width="150px"/>
          <div class="caption" style="text-align: -webkit-center">
            <p class="descricao-produto"><%= produto.descricao %></p>
            <strong><p class="preco-produto">Preço: R$ <%= produto.preco %></p></strong>
            <p> Mercado: <%= produto.codigo_mercado == 1 ? 'Brasão' : 'Moura' %>   </p>
            <p><a href="<%= produto.link_endereco %>" target="_blank">Ver produto </a></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= will_paginate @produtos, :container => false, :params => { :controller => 'produtos', :action => 'index' } %>